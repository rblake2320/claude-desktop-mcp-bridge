{
  "_comment": [
    "IMPORTANT: Replace paths below with ABSOLUTE paths to your clone.",
    "  macOS/Linux example: /Users/yourname/claude-desktop-mcp-bridge/dist/...",
    "  Windows example:     C:/Users/yourname/claude-desktop-mcp-bridge/dist/...",
    "",
    "Config file locations:",
    "  macOS:   ~/Library/Application Support/Claude/claude_desktop_config.json",
    "  Windows: %APPDATA%\\Claude\\claude_desktop_config.json",
    "  Linux:   ~/.config/Claude/claude_desktop_config.json"
  ],
  "mcpServers": {
    "filesystem-bridge": {
      "command": "node",
      "args": [
        "C:/Users/YOURNAME/claude-desktop-mcp-bridge/dist/filesystem-bridge/server.js"
      ],
      "env": {
        "ALLOWED_PATHS": "C:/Users/YOURNAME/projects,C:/Users/YOURNAME/Documents",
        "READ_ONLY": "false",
        "MAX_FILE_SIZE": "10485760"
      }
    },
    "shell-bridge": {
      "command": "node",
      "args": [
        "C:/Users/YOURNAME/claude-desktop-mcp-bridge/dist/shell-bridge/server.js"
      ],
      "env": {
        "TIMEOUT": "120000",
        "BLOCKED_COMMANDS": "rm,rmdir,del,format,fdisk,mkfs,dd,shutdown,reboot"
      }
    }
  }
}
